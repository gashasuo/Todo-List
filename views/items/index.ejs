<%- include("../partials/header.ejs") %> 
</html>
	<body>
		<%- include("../partials/navbar.ejs") %> 

		<h1>All Items</h1>
		<%- include("../partials/flash.ejs") %>

		<ul class = "uncompleted">
			<% for (let item of items) {%>
			<% if(item.complete == false){ %>
			<li><a href="/items/<%= item.id %>"><%= item.name %></a> <span class= "item" data-id="<%=item.id %>">&#9744;</span>
				<% if(item.project.complete == true){ %>
					<p class="completed"><%= item.project.name%></p> %>
					<% } else{ %>
				<p><a class ="blue" href="/projects/<%=item.project.id%>"><%= item.project.name%></a></p>
				<% } %>
			</li>
			<% } %>
			<% } %>
		</ul>
		<h3 id="complete">Items left to complete: <%= complete %></h3>
		<a href="/items/new?returnTo=/items">Add Item</a>

		
		<h2>Completed</h2>
		<ul class="complete">
			<% for (let item of items) {%>
				<% if(item.complete == true){ %>
				<li><a class = "completed" href="/items/<%= item.id %>"><%= item.name %></a> <span class= "item" data-id="<%=item.id %>">&#10003;</span>
					<% if(item.project.complete == true){ %>
						<p class="completed"><%= item.project.name%></p> %>
						<% } else{ %>
					<p><%= item.project.name%></p>
					<% } %>				</li>
				<% } %>
				<% } %>
		</ul>

		<script src="/js/app.js"></script>
	</body>
</html>
